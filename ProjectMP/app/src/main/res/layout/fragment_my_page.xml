<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageFragment">

    <ScrollView
        android:id="@+id/loginView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_baseline_person_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:id="@+id/idText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Id"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdf@konkuk.ac.kr"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/nicknameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_background"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 계정"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/nicknameBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닉네임 변경"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/emailBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일 변경"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/passwdBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/emailAuthBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건대 메일 인증"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_background"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/withdrawalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원탈퇴"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/logoutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="나만의 맛집을 추가하실려면\n로그인하세요"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_margin="10dp"/>
    </LinearLayout>

</FrameLayout>